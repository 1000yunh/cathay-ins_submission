# ==========================================
# RIS Scraper System - Environment Variables
# ==========================================
# Copy this file to .env and update with your actual values

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ris_scraper
DB_USER=your_username
DB_PASSWORD=your_password
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/ris_scraper

# ==========================================
# Scraper Configuration
# ==========================================
TARGET_URL=https://www.ris.gov.tw/app/portal/3053
HEADLESS_MODE=false
SCRAPER_TIMEOUT=30
PAGE_LOAD_TIMEOUT=20
IMPLICIT_WAIT=10

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# CAPTCHA (using ddddocr - automatic OCR)
CAPTCHA_AUTO_OCR=true

# Query parameters (ROC year format: 民國年/月/日)
QUERY_START_DATE=114/09/01
QUERY_END_DATE=114/11/30
QUERY_CITY=台北市
QUERY_CATEGORY=門牌初編

# Taipei districts (comma-separated)
TAIPEI_DISTRICTS=中正區,大同區,中山區,松山區,大安區,萬華區,信義區,士林區,北投區,內湖區,南港區,文山區

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=RIS Scraper API
API_VERSION=1.0.0

# ==========================================
# Email Alert Configuration
# ==========================================
# Gmail: Use App Password from https://myaccount.google.com/apppasswords
# Port 465 (SSL) recommended if port 587 is blocked
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=recipient@example.com

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==========================================
# Data Storage
# ==========================================
DATA_DIR=./data
DATA_RETENTION_DAYS=365
